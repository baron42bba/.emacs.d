aws --profile=${1:$$(yas-choose-value aws-snippets-profiles)} ${2:--region=${3:$$(yas-choose-value "\$\{REGION\}" aws-snippets-regions)}} ec2 describe-instances --query '${4:$$(yas-choose-value aws-snippets-ec2-list-instances-query)}' --output ${5:$$(yas-choose-value '("text" "table" "json"))} $0