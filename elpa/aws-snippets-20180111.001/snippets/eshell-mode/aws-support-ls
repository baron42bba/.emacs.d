# -*- mode: snippet -*-
# name: aws-support-ls
# key: support-ls
# group: aws
# --
aws --profile=${1:$$(yas-choose-value aws-snippets-profiles)} ${2:--region=${3:$$(yas-choose-value aws-snippets-regions)}} support describe-cases --no-include-communications --query "reverse(sort_by(cases, &timeCreated)[].[caseId, subject, timeCreated, displayId])" --output ${4:$$(yas-choose-value '("text" "table" "json"))} $0