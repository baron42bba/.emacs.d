# name: aws-ec2-instance-running
# key: aws-ec2-instance-running
# --
aws --profile=${1:$$(yas-choose-value '("prod" "test"))} ec2 describe-instances --instance-ids $2 --query "Reservations[].Instances[].[InstanceId, State.Name]" --output ${3:$$(yas-choose-value '("table" "text" "json"))} $0
