# -*- mode: snippet -*-
# name: aws-elb-search
# key: aws-elb-search
# --
for REGION in `(insert-string (mapconcat 'identity bba-aws-regions " "))`; do
    for BALANCER in \`aws --profile=${1:$$(yas-choose-value '("prod" "test"))} --region=\${REGION} elb describe-load-balancers --query "reverse(sort_by(LoadBalancerDescriptions, &CreatedTime)[].[LoadBalancerName])" --output text\`; do
        aws --profile=$1 --region=\${REGION} elb describe-load-balancers --load-balancer-name \${BALANCER} --output text | awk "{print \\"\${REGION}:\${BALANCER}:\\"\\\$0}"
    done
done $0
